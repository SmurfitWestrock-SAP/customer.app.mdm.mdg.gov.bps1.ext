  <!-- enabled="{ModelVue>/enable}" -->
  <core:FragmentDefinition id="IdPPDialogFrag" xmlns:core='sap.ui.core' xmlns='sap.m' xmlns:form="sap.ui.layout.form"
      xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartfield="sap.ui.comp.smartfield">
      <Dialog id="IdPPDialog" showHeader="false">
          <customHeader>
              <Toolbar>
                  <Label text="{i18n>perpay.perpay}" design="Bold" />
                  <ToolbarSpacer />
                  <Button id="IdPPCancel" icon="sap-icon://sys-cancel" type="Reject" press="onDialogClose" />
              </Toolbar>
          </customHeader>
          <content>
              <smartForm:SmartForm id="IdPermiPayeeSF" editable="true">
                  <smartForm:Group>
                      <smartForm:GroupElement>
                          <smartfield:SmartField value="{CompanyCode}" enabled="{=${UpdNotEnabled} ? false:true}" />
                      </smartForm:GroupElement>
                      <smartForm:GroupElement>
                          <smartfield:SmartField value="{PermittedPayee}"/>
                      </smartForm:GroupElement>
                  </smartForm:Group>
              </smartForm:SmartForm>
          </content>
          <!-- <footer> -->
          <Toolbar id="IdPPBar">
              <Button id="IdPPPopMsg" icon="sap-icon://message-popup" press="handleMessagePopoverPress"
                  type="{= (${message>/}.length > 0 ? 'Negative':'Default')}" text="{=${message>/}.length}" />
              <ToolbarSpacer />
              <Button id="IdPPVal" text="{i18n>valid}" icon="sap-icon://accept" type="Accept" press="onPPSave" />
          </Toolbar>
          <!-- </footer> -->
      </Dialog>
  </core:FragmentDefinition>